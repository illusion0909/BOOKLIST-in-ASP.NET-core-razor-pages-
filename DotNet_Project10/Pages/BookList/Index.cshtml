@page
@model DotNet_Project10.Pages.BookList.IndexModel
@{
}
<div class="container row border P-2 m-2">
    <div class="col-9">
        <h2 class="text-dark"> Book List</h2>
    </div>
    <div class="col-3">
        @*<a asp-page="Create" class="btn btn-info p-1 m-2 form-control">New Book</a>*@
        <a asp-page="Upsert" class="btn btn-success p-1 m-2 form-control">New Book</a>

    </div>
</div>
@if (Model.Books.Count() > 0)
{
    <div class="row rounded border p-2 m-2">
        <table class="table table-bordered table-striped table-active">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Author</th>
                    <th>ISBN</th>
                    <th>Price</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <form method="post">
                    @foreach (var item in Model.Books)
                    {
                    <tr>
                        <td>@item.Title</td>
                        <td>@item.Author</td>
                        <td>@item.ISBN</td>
                        <td>@item.Price</td>
                        <td>
                            <a asp-page="Upsert" asp-route-id="@item.Id" class="btn btn-success">Edit</a>
                           @* <a asp-page="Edit" asp-route-id="@item.Id" class="btn btn-success">Edit</a>*@
                                @*<a asp-page="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>*@
                            <input type="submit" asp-page-handler="Delete" asp-route-id="@item.Id" value="Delete" class="btn btn-danger" onclick="return confirm('want to delete data?')" />

                        </td>

                    </tr>
                    }
                </form>
            </tbody>
        </table>
    </div>
}

else
{
    <p class="text-danger">No Data Found</p>
}
<br />
<br />



<h2 class="text-primary text-center">Or</h2>
<div>
    <table id="tbldata" class="table table-bordered table-striped table-hover">
        <thead>
            <tr>
                <th>Title</th>
                <th>Author</th>
                <th>ISBN</th>
                <th>Price</th>
                <th>Actions</th>
            </tr>
        </thead>
    </table>
</div>
@section scripts
    {
    <script src="~/js/book.js"></script>
}