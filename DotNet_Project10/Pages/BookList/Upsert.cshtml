@page
@model DotNet_Project10.Pages.BookList.UpsertModel
@{
    var title = Model.Book.Id != 0 ? "Edit Book" : "New Book";
    var saveupd = Model.Book.Id != 0 ? "Update" : "Save";
}
<h2 class="text-primary text-center">@title</h2>
<br />
<br />
<form method="post">
    @if (Model.Book.Id != 0)
    {
        <Input Type="hidden" asp-for="@Model.Book.Id" />
    }
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="container border rounded col-6">

        <div class="form-group row p-2 m-2">
            <div class="col-3">
                <label asp-for="Book.Title"></label>
            </div>
            <div class="col-8">
                <input asp-for="Book.Title" class="form-control" />
                <span asp-validation-for="Book.Title" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row p-2 m-2">
            <div class="col-3">
                <label asp-for="Book.Author"></label>
            </div>
            <div class="col-8">
                <input asp-for="Book.Author" class="form-control" />
                <span asp-validation-for="Book.Author" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row p-2 m-2">
            <div class="col-3">
                <label asp-for="Book.ISBN"></label>
            </div>
            <div class="col-8">
                <input asp-for="Book.ISBN" class="form-control" />
                <span asp-validation-for="Book.ISBN" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row p-2 m-2">
            <div class="col-3">
                <label asp-for="Book.Price"></label>
            </div>
            <div class="col-6">
                <input asp-for="Book.Price" class="form-control" />
                <span asp-validation-for="Book.Price" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row p-2 m-2">
            <div class="col-3 offset-3">
                <a asp-page="Index" class="btn btn-success form-control">Back To List</a>
            </div>
            <div class="col-3">
                <button type="submit" class="btn btn-danger form-control">
                    @saveupd
                    @* @(Model.Book.Id !=0? "Update":"Save")*@
                </button>
            </div>
        </div>
    </div>

</form>
@section Scripts
    {
    <partial name="_ValidationScriptsPartial" />
}
